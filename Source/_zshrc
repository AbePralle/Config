alias gitlog='git log --date=format:"%Y.%m.%d" --pretty=format:"%Cgreen%h%Creset -%C(yellow)%d%Creset %<|($(($COLUMNS-40)))%s %C(cyan)(%cd) %C(green)<%an>%Creset" --abbrev-commit'
